extends PanelContainer

# ------------------------------------------------------------------------------------------------ #
# -- Private Functions -- #
# ------------------------------------------------------------------------------------------------ #

func _enter_tree() -> void:
	visible = false
	SignalBus.connect("state_changed_game_over", _on_state_changed_game_over)

# ------------------------------------------------------------------------------------------------ #

func _on_state_changed_game_over() -> void:
	visible = true

# ------------------------------------------------------------------------------------------------ #

func _on_quit_button_pressed() -> void:
	get_tree().quit()

# ------------------------------------------------------------------------------------------------ #
